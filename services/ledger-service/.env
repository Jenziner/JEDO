# Service Config
NODE_ENV=development
PORT=3002
HOST=0.0.0.0
SERVICE_NAME=ledger-service

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Security
REQUIRE_CLIENT_CERT=false
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
MAX_REQUEST_SIZE=10mb
CORS_ORIGIN=http://localhost:3000

# Hyperledger Fabric
FABRIC_NETWORK_NAME=test-network
FABRIC_CHANNEL_NAME=mychannel
FABRIC_CHAINCODE_NAME=basic
FABRIC_MSP_ID=Org1MSP
FABRIC_PEER_ENDPOINT=localhost:7051
FABRIC_PEER_HOST_ALIAS=peer0.org1.example.com
FABRIC_PEER_TLS_CERT=../../fabric-samples/test-network/organizations/peerOrganizations/org1.example.com/peers/peer0.org1.example.com/tls/ca.crt
FABRIC_PEER_TLS_ROOT_CERT=../../fabric-samples/test-network/organizations/peerOrganizations/org1.example.com/peers/peer0.org1.example.com/tls/ca.crt

# Gateway Identity (Admin f√ºr Service-to-Fabric)
FABRIC_GATEWAY_CERT=../../fabric-samples/test-network/organizations/peerOrganizations/org1.example.com/users/Admin@org1.example.com/msp/signcerts/cert.pem
FABRIC_GATEWAY_KEY=../../fabric-samples/test-network/organizations/peerOrganizations/org1.example.com/users/Admin@org1.example.com/msp/keystore/priv_sk

# Skip Fabric validation for dev without network
SKIP_FABRIC_VALIDATION=false
