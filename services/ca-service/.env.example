# ========================================
# CA-SERVICE CONFIGURATION
# ========================================

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
SERVICE_NAME=ca-service

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Security
REQUIRE_CLIENT_CERT=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=*

# ========================================
# HYPERLEDGER FABRIC CA
# ========================================

# CA Configuration
FABRIC_CA_NAME=ca.alps.ea.jedo.dev
FABRIC_CA_URL=https://ca.alps.ea.jedo.dev:7054
FABRIC_CA_ADMIN_USER=admin
FABRIC_CA_ADMIN_PASS=adminpw
FABRIC_MSP_ID=AlpsMSP

# TLS Configuration
FABRIC_CA_TLS_CERT_PATH=/app/infrastructure/crypto-config/peerOrganizations/alps.ea.jedo.dev/ca/ca.alps.ea.jedo.dev-cert.pem
FABRIC_CA_TLS_VERIFY=true

# Idemix Configuration
FABRIC_CA_IDEMIX_CURVE=gurvy.Bn254

# Certificate Hierarchy
FABRIC_ORBIS_NAME=ea.jedo.dev
FABRIC_REGNUM_NAME=alps
FABRIC_AGER_NAME=worb

# Paths
CRYPTO_PATH=/app/infrastructure
